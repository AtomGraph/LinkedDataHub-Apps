<> a def:Root ;
    dct:title "Root" ;
    dct:description "Geospatial and other open data about cities, imported by transforming CSV files to RDF" ;
    rdf:_1 <#page-header> ;
    rdf:_2 <#content-blocks> ;
    rdf:_3 <#main-library> ;
    rdf:_4 <#check-out> ;
    rdf:_5 <#largest-parkings> ;
    rdf:_6 <#check-out> ;
    rdf:_7 <#select-children> .

<#page-header> a ldh:Content ;
    rdf:value """<div xmlns="http://www.w3.org/1999/xhtml">
        <div class="page-header">
            <h2>City Graph</h2>
            <p class="lead">Geospatial and other open data about Copenhagen. Features include CSV imports and a color-coded <a href="geo/" target="_blank">map layout</a>.</p>
        </div>
    </div>"""^^rdf:XMLLiteral .

<#content-blocks> a ldh:Content ;
    rdf:value """<div xmlns="http://www.w3.org/1999/xhtml">
        <p>LinkedDataHub enables rich documents composed of structured content blocks that are backed by RDF Knowledge Graph data. HTML content, Linked Data resources, collections (containers), charts, SPARQL query results â€”
            all of them can be used as blocks, presented in any of the layout modes. And of course, new custom block types can be introduced by extending LinkedDataHub.</p>
        <p>As an example, below we have embedded Copenhagen's Main Library in map mode.</p>
    </div>"""^^rdf:XMLLiteral .

<#main-library> a ldh:Content ;
    rdf:value <copenhagen/places/stednavn_punkt.fid-361ad8c1_150a94a2aab_-83b/> ;
    ac:mode ac:MapMode .

<#charts> a ldh:Content ;
    rdf:value """<div xmlns="http://www.w3.org/1999/xhtml">
        <p>What are the largest parkest facilities in Copenhagen? Let's find out in this SPARQL-driven chart.</p>
    </div>"""^^rdf:XMLLiteral .

<#largest-parkings> a ldh:Content ;
    rdf:value <charts/largest-parkings/#this> .

<#check-out> a ldh:Content ;
    rdf:value """<div xmlns="http://www.w3.org/1999/xhtml">
        <p>Check out the rest of Copenhagen's geodata in the collection below.</p>
    </div>"""^^rdf:XMLLiteral .

<#select-children> a ldh:Content ;
    rdf:value ldh:SelectChildren .